# Environment configuration for RGB Controller Middleware

# Flask settings
HOST=127.0.0.1
PORT=5000
DEBUG=True

# Serial communication
SERIAL_BAUD_RATE=115200
SERIAL_TIMEOUT=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=middleware.log

# API settings
MAX_USERNAME_LENGTH=50
ENABLE_CORS=True

# ESP32 connection
AUTO_RECONNECT=True
CONNECTION_RETRY_DELAY=5